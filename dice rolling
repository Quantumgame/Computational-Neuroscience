import numpy as np
N=1000000
#probability to get an even number in 6-sided dice rolling
a=np.random.randint(low=1,high=7,size=N)
r=len(a[a%2==0])/float(N)
print r

#probability to get a sum of 6 in 2 dice rolling
b=np.random.randint(low=1,high=7,size=N)
c=np.random.randint(low=1,high=7,size=N)
n=0
for i in range(0,N):
    if b[i]+c[i]==6:
        n+=1
r=n/float(N)
print r
